{
  "name": "ski-lib",
  "version": "1.0.5",
  "description": "Write web components in HTML and async generator properties",
  "module": "ski-lib.js",
  "main": "ski-lib.min.js",
  "types": ".types/index.d.ts",
  "scripts": {
    "build": "run-s clean build:*",
    "watch": "run-p \"build:* -- --watch\"",
    "clean": "rimraf js .types",
    "build:bundle": "rollup -c",
    "build:typescript": "ttsc"
  },
  "keywords": [
    "html",
    "async",
    "generators",
    "web-components"
  ],
  "homepage": "https://github.com/saviski/ski-lib#readme",
  "author": "saviski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saviski/ski-lib/issues",
    "email": "marcelo@saviski.dev"
  },
  "repository": "saviski/ski-lib",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.16.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-transform-import-path-rewrite": "^0.2.1",
    "tslib": "^2.0.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.7"
  },
  "files": [
    ".types",
    "js",
    "ski-lib.min.js",
    "ski-lib.min.js.map"
  ],
  "dependencies": {
    "tokenlist": "^0.1.0"
  },
  "prettier": {
    "printWidth": 90,
    "semi": false,
    "tabWidth": 2,
    "proseWrap": "never",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "singleQuote": true
  }
}
